public class ArraySortDesc
{
	public static void main(String[] args) {
	int arr[]={100,-1,50,0,1};
	int len=arr.length;
	int temp=0;
	for(int i=0;i<len;i++)
	{
	    for(int j=i+1;j<len;j++)
	    {
	        if(arr[i]<arr[j])
	        {
	         temp=arr[i];
	         arr[i]=arr[j];
	         arr[j]=temp;
	        }
	    }
	}
	for(int i=0;i<len;i++)
	{
	    System.out.print(arr[i]+" ");
	}
	}
}
